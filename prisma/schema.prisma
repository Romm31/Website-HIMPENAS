generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  uploads   Upload[]
}

model Kategori {
  id     Int      @id @default(autoincrement())
  nama   String   @unique
  berita Berita[]
}

model Berita {
  id         Int       @id @default(autoincrement())
  judul      String
  konten     String
  gambarUrl  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  kategoriId Int?
  kategori   Kategori? @relation(fields: [kategoriId], references: [id])
}

model Event {
  id        Int      @id @default(autoincrement())
  judul     String
  deskripsi String
  tanggal   DateTime
  lokasi    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model About {
  id      Int    @id @default(autoincrement())
  profile String
}

model Visi {
  id     Int    @id @default(autoincrement())
  konten String
}

model Misi {
  id     Int    @id @default(autoincrement())
  konten String
  order  Int?
}

model Upload {
  id        Int      @id @default(autoincrement())
  filename  String
  url       String
  size      Int
  mimetype  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Slide {
  id        Int      @id @default(autoincrement())
  title     String
  imageUrl  String
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([order])
}

enum MediaType {
  IMAGE
  VIDEO
}

model GalleryAlbum {
  id            Int      @id @default(autoincrement())
  title         String
  description   String?
  coverImageUrl String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  mediaItems    GalleryMedia[]
}

model GalleryMedia {
  id           Int          @id @default(autoincrement())
  title        String?
  url          String
  type         MediaType    @default(IMAGE)
  thumbnailUrl String?      // Berguna untuk thumbnail video
  createdAt    DateTime     @default(now())
  albumId      Int
  album        GalleryAlbum @relation(fields: [albumId], references: [id], onDelete: Cascade)
}